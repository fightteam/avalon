<div class="container" id="loginPanel">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">请登录</h3>
                </div>
                <div class="panel-body">
                    <form role="form" method="post" action="#" id="loginForm">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="账号或Email" name="username" type="text" autofocus id="username">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="密码" name="password" type="password" id="password">
                            </div>

                            <div class="checkbox">
                                <label>
                                    <input name="remember" type="checkbox" value="Remember Me">记住我
                                </label>
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <button type="button" class="btn btn-lg btn-success btn-block" id="login">登陆</button>
                            <a href="#forgetpassword" class="btn btn-lg btn-primary btn-block">忘记密码？</a>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>