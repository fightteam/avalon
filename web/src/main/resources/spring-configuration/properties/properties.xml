<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/util
           http://www.springframework.org/schema/util/spring-util-3.1.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.1.xsd
           ">
    <description>系统资源设定,全局化配置设定</description>

    <!--国际化资源-->
    <bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource"
          p:fallbackToSystemLocale="false"
          p:defaultEncoding="UTF-8"
          p:cacheSeconds="180">
        <property name="basenames">
            <list>
                <value>classpath:languages/messages</value>
            </list>
        </property>
    </bean>
    <!--主题资源-->
    <bean id="themeSource" class="org.springframework.ui.context.support.ResourceBundleThemeSource">
        <property name="basenamePrefix" value="config/themes/theme-"/>
    </bean>

    <!--加载全局配置-->
    <context:property-placeholder location="classpath:config/application.properties" ignore-unresolvable="true"/>

    <util:properties id="stylesProps" location="classpath:config/styles.properties" />
    <util:properties id="scriptsProps" location="classpath:config/scripts.properties" />
</beans>
